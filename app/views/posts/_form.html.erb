<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <p>
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :ingredients %>:
    <%= f.text_area :ingredients %>
  </p>
    <p>
    <%= f.label :instructions %>:
    <%= f.text_area :instructions %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
