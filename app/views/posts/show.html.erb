<div class='entire-recipe'>
<h2 class='recipe-title'><%= @post.title %></h2>

<p class="date">
  Created <%= time_ago_in_words(@post.created_at) %> ago.
  <% if logged_in? && admin? %>|
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you would like to delete this post?'} %>
    <% end %>
</p>

<div class="body">
  <%= image_tag @post.image.url(:medium) %>
  <h4>Cook time: <%= @post.cook_time %></h4>
  <h3>Ingredients</h3>
  <div class='ingredients'>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
    </ul>
    </div>
  <h3>Instructions</h3>
  <div class="instructions">
     <ol>
    <% @instructions.each do |instruction| %>
      <li><%= instruction %></li>
    <% end %>
    </ol>
    </div>
    <p><%= link_to 'Original Recipe', @post.original_recipe %></p>
</div>
<div class='comments'>
  <h3>Comments</h3>
  <%= render @post.comments %>
  <% if logged_in? %>
    <h4>Add a Comment</h4>
    <%= render 'comments/form' %>
  <% end %>
</div>
</div>